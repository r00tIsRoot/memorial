<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eu.kudan.test.ARCameraViewActivity"

    android:id="@+id/relativelayout1"

    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Arbi Track"
        android:id="@+id/lockButton"
        android:onClick="lockPosition"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp" />

    <Button
        android:id="@+id/btnGREEN"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:onClick="btnClick"
        android:text="green"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnBLUE"
        android:layout_toStartOf="@+id/btnBLUE"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

    <Button
        android:id="@+id/btnBLUE"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_weight="0.22"
        android:onClick="btnClick"
        android:text="blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnWHITE"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:onClick="btnClick"
        android:text="white" />

    <Button
        android:id="@+id/btnRED"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:onClick="btnClick"
        android:text="red"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnGREEN"
        android:layout_toStartOf="@+id/btnGREEN"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />





    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Click Here to clear drawing "
        android:id="@+id/button"
        android:layout_weight="10"
        android:layout_above="@+id/lockButton"
        android:layout_alignLeft="@+id/lockButton"
        android:layout_alignStart="@+id/lockButton" />

    <Button
        android:text="캡쳐하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="mOnCaptureClick"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/button"
        android:layout_toLeftOf="@+id/btnBLUE"
        android:layout_toStartOf="@+id/btnBLUE" />








</RelativeLayout>
