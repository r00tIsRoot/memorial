<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eu.kudan.test.ARCameraDrawActivity">


    <ImageButton
        android:id="@+id/btnGREEN"
        android:src="@drawable/paint_green"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/btnBLUE"
        android:layout_toStartOf="@+id/btnBLUE"
        android:background="@android:color/transparent"
        android:onClick="btnClick" />

    <ImageButton
        android:id="@+id/btnBLUE"
        android:src="@drawable/paint_blue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="0.22"
        android:background="@android:color/transparent"
        android:onClick="btnClick"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnBLACK"
        android:layout_toStartOf="@+id/btnBLACK" />

    <ImageButton
        android:id="@+id/btnWHITE"
        android:src="@drawable/paint_white"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/btnRED"
        android:layout_toStartOf="@+id/btnRED"
        android:background="@android:color/transparent"
        android:onClick="btnClick" />

    <ImageButton
        android:id="@+id/btnRED"
        android:src="@drawable/paint_red"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/btnGREEN"
        android:layout_toStartOf="@+id/btnGREEN"
        android:background="@android:color/transparent"
        android:onClick="btnClick" />


    <ImageButton
        android:id="@+id/btnBLACK"
        android:src="@drawable/paint_black"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="10"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnClick" />

    <ImageButton
        android:id="@+id/button2"
        android:src="@drawable/camera_green"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/btnWHITE"
        android:layout_toStartOf="@+id/btnWHITE"
        android:background="@android:color/transparent"
        android:onClick="mOnCaptureClick" />

    <RelativeLayout
        android:id="@+id/layoutCanvas"
        android:layout_width="450dp"
        android:layout_height="600dp"
        android:layout_below="@+id/btnGREEN"
        android:layout_marginBottom="-18dp"
        android:layout_marginLeft="-18dp"
        android:layout_marginRight="-18dp" />


</RelativeLayout>
